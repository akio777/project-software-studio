@model LabReservation.Models.AuthenModel

@section Scripts
{
  <link href="~/css/signin.css" rel="stylesheet" />
}

@{
    ViewData["Title"] = "Sign in";
}

@* <h1>Index</h1> *@
@* *@
<div class="w-screen h-screen flex-center">
    <div class="sign-box">
        <div class="sign-in">
            <h1>Sign in</h1>
            <form asp-action="Login">
                <div class="form-group">
                    @* <label asp-for="email" class="control-label"></label> *@
                    <input asp-for="email" class="form-control" placeholder="email"/>
                    <span asp-validation-for="email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    @* <label asp-for="password" class="control-label"></label> *@
                    <input asp-for="password" class="form-control" placeholder="password"/>
                    <span asp-validation-for="password" class="text-danger"></span>
                </div>
                <div class="form-group login-left">
                    <input type="submit" value="Login" class="btn login-btn"/>
                </div>
            </form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <form asp-action="Register">
                <div class="form-group register-right">
                    <a asp-action="Register" class="btn text-white">Create account</a>
                    <span class="material-icons">arrow_forward</span>
                </div>
            </form>
        </div>
        <div class="detail">
            <div class="Logo">
                <img src='@Url.Content("~/Images/Ellipse 10.svg")' alt="Image">
                <h1 class="front">LAB</h1>
                <h1 class="back">RESERVE</h1>
            </div>
            
            <div class="sm-box">
                <div class="sm-logo">
                    <span>location</span>
                    <span class="material-icons">place</span>
                </div>
                <span class="sm-desc">ECC Building</span>
            </div>
            <div class="sm-box">
                <div class="sm-logo">
                    <span>location</span>
                    <span class="material-icons">watch_later</span>
                </div>
                <span class="sm-desc">08:00 - 18:00</span>
            </div>
            <img src='@Url.Content("~/Images/login-pic.png")' alt="Image">
        </div>
        
    </div>
</div>

