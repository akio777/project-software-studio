@model LabReservation.Models.LabManageCard

<link rel="stylesheet" type="text/css" href="~/css/labmanageCard.css">

<div class="card">
    <div class="card-main" tabindex="0" id="@Model.labinfo.id" onclick=clickTest(this.id)>
        <div class="card-header">
            <h3 class="lab-name">@Model.labinfo.name</h3>
        </div>
        <div class="card-detail">
            <p>equipment : @Model.labinfo.equip</p>
            <p>current amount : @Model.equipinfo.maximum</p>
        </div>
    </div>
</div>

<script>
    function clickTest(id) {
        var url = 'Reserveinfo/index/' + id;
        window.location.href = url;
    }
</script>
