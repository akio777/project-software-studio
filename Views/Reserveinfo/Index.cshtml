@model LabReservation.Models.Labinfo

@{
    ViewData["Title"] = "Index";
}

<link rel="stylesheet" type="text/css" href="~/css/reserveLayout.css">

<div class="layout">
    <div class="layout-main">
        <h1 class="lab-name">@Model.name</h1>
        <h2 class="equiment-name">@Model.equip</h2>
        <p>Select time slot to reserve the equipment</p>
    </div>
</div>

<button id="btn-open-modal">Open Modal</button>

<div>
    @await Component.InvokeAsync("CancelReserve")
</div>
