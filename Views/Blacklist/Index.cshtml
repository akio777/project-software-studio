@model LabReservation.Models.BlackListPage

@{
    ViewData["Title"] = "Index";
}

@section Scripts
{
<link href="~/css/blacklist.css" rel="stylesheet" />
}

<div class="container-blacklist">
    <div class="blacklist-header">Blacklist</div>
    <div class="users-list">
        <div class="user-email">
            <div class="notblock-header">Users</div>
            <div class="notblock-area">
                @foreach (var item in @Model.NotBlock)
                {
                    @await Component.InvokeAsync("EmailCardNotBlock",new {lab = @item})
                }
            </div>
        </div>
        <div class="blacklist-email">
            <div class="block-header">Blacklist</div>
            <div class="wasblock-area">
                @foreach (var item in @Model.wasBlock)
                {
                    @await Component.InvokeAsync("EmailCardWasBlock",new {lab = @item})
                }
            </div>
        </div>
    </div>
</div>
